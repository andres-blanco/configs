# This is Git's per-user configuration file.
[user]
    name = Andr√©s Blanco
    email = <% EMAIL %>
    signingkey = <% SIGNING_KEY %>

[credential]
    helper = <% CREDENTIAL_HELPER %>

[diff]
    algorithm = patience
    tool = vimdiff

[difftool]
    prompt = false

[core]
    editor = vim
    ignorecase = false

[pull]
    rebase = true

[alias]
    s = status -s
    l = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
    cam = commit -a -m
    amend = commit --amend
    ds = diff --staged
    pr = pull --rebase
    fuckit = "!git clean -dfx ; git reset --hard"

[gpg]
    program = <% GPG_PROGRAM %>
